<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:background="@color/colorPrimary"
            tool:text="酒茶生1.5.4"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:lines="1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scrollbarThumbVertical="@drawable/shape_scrollbar_ver_thumb"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_version_name"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:padding="8dp"
                    android:textSize="20sp"
                    tool:text="版本名：1.5.5"/>

                <TextView
                    android:id="@+id/tv_apk_size"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:padding="8dp"
                    android:textSize="20sp"
                    tool:text="包大小：12.32MB"/>

                <TextView
                    android:id="@+id/tv_apk_update_date"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:lines="1"
                    tool:text="更新时间：2017-09-26 17：51：35"/>


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:lines="1"
                    android:text="@string/apk_update_introduction"
                    />

                <TextView
                    android:id="@+id/tv_apk_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="8dp"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    tool:text="酒茶生1.5.4新增了消费满一定金额赠送对应卡的活动等" />

                <TextView
                    android:id="@+id/tv_apk_introduction_add"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="20sp"
                    tool:text="【新增】
 1.支持添加四位的自编码商品
 2.在盘点和标签的时候，优先显示自编码商品和散称商品
 3.散称商品支持四舍五入
 4.支持添加省区微信的公众号的配置
 5.更换轮播广告图，增加二维码
 6.限制单笔消费的上限，单笔消费超过100积分，需要输入支付密码
 7.新增组合支付功能
 8.支持散称商品的下载联网更新，实时更新数据
 9.增加货流订单的小票的打印
 10.新增优惠处销：消费满一定金额赠送对应卡的活动
" />

                <TextView
                    android:id="@+id/tv_apk_introduction_fix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="20sp"
                    tool:text="【修复】
1.修复散称商品下载报错
2.收银员交接班登录报错"
                    />

                <TextView
                    android:id="@+id/tv_apk_introduction_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:paddingTop="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="20sp"
                    tool:text="【取消】
1.随便取消了什么东西
2.取消了***********"
                    />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <com.android.freak.appupdateutils.appupdateutils.NumberProgressBar
              android:id="@+id/progress_bar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              app:progress_reached_bar_height="18dp"
              app:progress_max="100"
              app:progress_text_size="18sp"
              app:progress_unreached_bar_height="12dp"
              app:progress_reached_color="@color/colorPrimary"
              app:progress_unreached_color="#FFC73B"
              app:progress_text_color="#FFC73B"
              android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btn_update_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_later"
                    android:background="@drawable/round_btn_bg_gray_shape"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_update_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_now"
                    android:background="@drawable/round_btn_bg_yellow_shape"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>